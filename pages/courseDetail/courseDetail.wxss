/* pages/courseDetail/courseDetail.wxss */

.sectionTitle {
  padding-left: 24rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}

page {
  background-color: #f5f5f5;
}

.courseDetailView .bg {
  width: 100%;
}

.section {
  padding: 0 24rpx 34rpx 24rpx;
  margin-bottom: 14rpx;
}

.sectionText {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
  line-height: 47rpx;
  margin-top: 20rpx;
}

.s1 {
  padding-top: 70rpx;
  border-top-left-radius: 22rpx;
  border-top-right-radius: 22rpx;
  margin-top: -20rpx;
  position: relative;
}

.s1 .s1Top image {
  width: 25rpx;
  height: 28rpx;
}

.s1 .s1Top .name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 14rpx;
  margin-left: 14rpx;
}

.s1 .s1Top .time {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
}

.s1 .s1Top .price {
  font-size: 40rpx;
  font-weight: 600;
  color: #E35A5A;
}

.s1 .s1Top .price .text-sm {
  font-size: 24rpx;
}

.s4 .item image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  margin-bottom: 23rpx;
}

.s4 .item .name {
  font-size: 28rpx;
  font-weight: 400;
  color: #666666;
}

.s5Text {
  font-size: 28rpx;
  font-weight: 400;
  color: #222222;
  line-height: 1.6em;
  height: 3.2em;
  overflow: hidden;
}

.hAuto {
  height: auto;
}

.showMpre {
  text-align: center;
