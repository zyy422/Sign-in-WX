/* pages/coachFilter/coachFilter.wxss */
page {
  background-color: #ffffff;
}

.coachFilterView {
  padding: 23rpx 44rpx 40rpx 44rpx;

}

.coachFilterView .section {
  margin-bottom: 65rpx;
}

.coachFilterView .section .label {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  margin-bottom: 53rpx;
}

.coachFilterView .section .tagBox .item {
  min-width: 130rpx;
  padding: 0 14rpx;
  line-height: 42rpx;
  font-size: 26rpx;
  color: #696969;
  background-color: rgba(191, 191, 191, .4);
  border-radius: 4rpx;
  margin-right: 18rpx;
  margin-bottom: 40rpx;
}

.coachFilterView .section .tagBox .item.select {
  background-color: #e54d42;
  color: #fff;
}


.btnBox .btn {
  padding: 0;
  font-size: 30rpx;
  width: 266rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 41rpx;
  font-weight: 500;
}

.btnBox .rest {
  color: #333333;
  border: 1rpx solid #FF0000;
}

.btnBox .save {
  color: #fff;
  background: linear-gradient(180deg, #FF6E6D, #FF3635);
}