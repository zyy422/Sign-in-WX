/* pages/cardDetail/cardDetail.wxss */
page {
  background-color: #f5f5f5;
}

.sectionTitle {
  padding-left: 45rpx;
  padding-right: 22rpx;
  position: relative;
  font-size: 32rpx;
  color: #343434;
  font-weight: 700;
  /* border-bottom: 1rpx solid #EEEEEE; */
  line-height: 80rpx;
}

.sectionTitle::after {
  position: absolute;
  left: 22rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  content: '';
  background: linear-gradient(180deg, #FF6E6E, #FF3736);
  border-radius: 4rpx;
}

.sectionTitle .btn {
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #C6C6C6;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #9A9A9A;
}
 
.cardDetailView .section {
  margin-top: 16rpx;
  padding-bottom: 22rpx;
}

.s1 .card {
  width: 100%;
  margin-top: -30rpx;
}

.s1 .cardInfo {
  padding: 0 60rpx;
  margin-top: -40rpx;
}

.s1 .cardInfo .name {
  font-size: 32rpx;
  font-weight: 400;
  color: #555555;
}

.s1 .cardInfo .money {
  font-size: 34rpx;
  font-weight: 600;
  color: #CA3B3B;
}

.s1 .cardInfo .time {
  font-size: 30rpx;
  font-weight: 500;
  color: #636363;
  line-height: 34px;
}


.canuseType {
  display: inline-block;
  margin-left: 44rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #B1B1B1;
